<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#8B8BF6"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#FFFFFF"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:text="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/textView"
        >

        <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="#B5B5D6"
        android:text="1"
        android:layout_marginLeft="20dp"
        android:onClick="num1"
        />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="2"
            android:layout_marginLeft="30dp"
            android:onClick="num2"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="3"
            android:layout_marginLeft="30dp"
            android:onClick="num3"
            />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="+"
            android:layout_marginLeft="30dp"
            android:onClick="plus"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        >

        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="4"
            android:layout_marginLeft="20dp"
            android:onClick="num4"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="5"
            android:layout_marginLeft="30dp"
            android:onClick="num5"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="6"
            android:layout_marginLeft="30dp"
            android:onClick="num6"
            />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="-"
            android:layout_marginLeft="30dp"
            android:onClick="minus"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/layout2"
        >

        <Button
            android:id="@+id/button7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="7"
            android:layout_marginLeft="20dp"
            android:onClick="num7"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="8"
            android:layout_marginLeft="30dp"
            android:onClick="num8"
            />

        <Button
            android:id="@+id/button9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="9"
            android:layout_marginLeft="30dp"
            android:onClick="num9"
            />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="/"
            android:layout_marginLeft="30dp"
            android:onClick="division"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/layout3"
        >

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text=","
            android:layout_marginLeft="20dp"
            android:onClick="dot"
            />

        <Button
            android:id="@+id/button0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="0"
            android:layout_marginLeft="30dp"
            android:onClick="num0"
            />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="C"
            android:layout_marginLeft="30dp"
            android:onClick="clear"
            />

        <Button
            android:id="@+id/buttonMulti"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="*"
            android:layout_marginLeft="30dp"
            android:onClick="multiply"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/layout4"
        >

        <Button
            android:id="@+id/buttonSqrt"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="sqrt"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/buttonX"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="1/x"
            android:layout_marginLeft="30dp"
            android:onClick="oneDivideBy"
            />

        <Button
            android:id="@+id/buttonChangeSigh"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="+/-"
            android:layout_marginLeft="30dp"
            android:onClick="reverse"
            />

        <Button
            android:id="@+id/buttonRes"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#B5B5D6"
            android:text="="
            android:layout_marginLeft="30dp"
            android:onClick="result"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>